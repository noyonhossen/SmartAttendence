<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background"
    tools:context=".Course_2_Activity">

    <LinearLayout
        android:gravity="center"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="MinusClass"
            android:background="@color/button_color"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/total_classID_2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:onClick="AddClass"
            android:background="@color/button_color"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <EditText
        android:inputType="text"
        android:id="@+id/edittextPasswordID2"
        android:hint="Enter Password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <Button
        android:background="@color/button_color"
        android:id="@+id/button_send_passwordID2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:background="@color/button_color"
        android:layout_marginTop="30dp"
        android:onClick="OpenDetails2"
        android:text="Students Detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:background="@color/button_color"
        android:layout_marginTop="30dp"
        android:onClick="TodaysAttendence2"
        android:text="Today's Attendence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>