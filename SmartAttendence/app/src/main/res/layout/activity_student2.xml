<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".StudentActivity2">

    <EditText
        android:inputType="text"
        android:id="@+id/edittextPasswordIDStudent2"
        android:hint="Enter Password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <SurfaceView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/camerapreview2"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview2"
            android:layout_below="@id/camerapreview2"
            android:layout_marginTop="20dp"
            android:text="Please focus on your QR code"
            android:textSize="18sp"
            android:gravity="center"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/buttonSendID2"
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>